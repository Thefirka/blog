{% extends 'base.html.twig' %}
{% block title %} Registration {% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <form method="post" action="">
        Your name:<br>
        <input name="name"><br><br>
        Your password:<br>
        <input type="password" name="password"><br><br>
        <input type="submit">
    </form>
    {% if message != [] %}
        <div class="alert-danger"><p>{{ message[0] }}</p></div>
    {% endif %}
    Already registered? <a href="{{ path('app_login') }}">Login</a>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        {% if currentUser == true %}
            <p> Thanks for using MySpace, {{ currentUser.username }}! <a href="{{ path('app_logout') }}">Logout</a>
            <a style="position: absolute; right: 150px" href="{{ path('app_homepage') }}"> Return to homepage </a>
            <a style="text-align: center" href="{{ path('app_new_article') }}">Write a new Article</a></p>
            {% else %}
               <p> You haven't logged in, <a href="{{ path('app_login') }}">Login</a> or <a href="{{ path('app_register')}}">JOIN OUR RANKS</a></p>
        {% endif %}
            {% if message != [] %}
                <div class="alert-danger"><p>{{ message[0] }}</p></div>
            {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
